<div class="columns mediumlarge-4 hidden-section p-sm">
  <div class="medium-8">
    <% if current_settings.votes_enabled? || show_endorsements_card? || current_user %>
      <%= follow_button_for(proposal, true) %>
      <div class="button-group button-group--collapse mb-s row collapse">
        <%= link_to "#{resource_locator(proposal).path}/#comments", class: "column medium-4 button light secondary" do %>
          <%= icon "comment-square", class: "icon--small", aria_label: "comments", role: "img" %> <%= proposal.comments.count %>
        <% end %>
        <%= link_to "#{resource_locator(proposal).path}/#comments", class: "column button hollow secondary button--sc" do %>
          Comment
        <% end %>
      </div>
      <div class="button-group button-group--collapse mb-s row collapse">
        <% if current_settings.votes_enabled? %>
          <%= render partial: "votes_count", locals: { proposal: proposal, from_proposals_list: true } %>
          <%= render partial: "vote_button", locals: { proposal: proposal, from_proposals_list: true } %>
        <% end %>
      </div>
      <div class="button-group button-group--collapse row collapse">
        <%= link_to resource_locator(proposal).path, class: "column medium-4 button secondary light button--sc button--shadow" do %>
          <%= icon "bullhorn", class: "icon--small", aria_label: "Endorsements", role: "img" %>
          <%= proposal.proposal_endorsements_count.to_s %>
        <% end %>
        <%= link_to resource_locator(proposal).path, class: "column button secondary light button--sc" do %>
          Adherirse
        <% end %>
      </div>
    <% end %>
  </div>
</div>
